# This tmux statusbar config was created by tmuxline.vim
# on dv, 16 mar 2018

set -g status-justify "left"
set -g status "on"
set -g status-attr "none"
set -g message-command-bg "#93a1a1"
set -g status-left-length "100"
set -g pane-active-border-fg "#93a1a1"
set -g status-bg "#657b83"
set -g message-command-fg "#073642"
set -g pane-border-fg "#657b83"
set -g message-bg "#93a1a1"
set -g status-left-attr "none"
set -g status-right-attr "none"
set -g status-right-length "100"
set -g message-fg "#073642"
setw -g window-status-fg "#073642"
setw -g window-status-attr "none"
setw -g window-status-activity-bg "#657b83"
setw -g window-status-activity-attr "none"
setw -g window-status-activity-fg "#073642"
setw -g window-status-separator ""
setw -g window-status-bg "#657b83"
set -g status-left "#[fg=#93a1a1,bg=#073642] #S #[fg=#073642,bg=#657b83,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=#93a1a1,bg=#657b83,nobold,nounderscore,noitalics]#[fg=#073642,bg=#93a1a1] %Y-%m-%d | %H:%M #[fg=#073642,bg=#93a1a1,nobold,nounderscore,noitalics]#[fg=#93a1a1,bg=#073642] #h "
setw -g window-status-format "#[fg=#073642,bg=#657b83] #I |#[fg=#073642,bg=#657b83] #W "
setw -g window-status-current-format "#[fg=#657b83,bg=#93a1a1,nobold,nounderscore,noitalics]#[fg=#073642,bg=#93a1a1] #I |#[fg=#073642,bg=#93a1a1] #W #[fg=#93a1a1,bg=#657b83,nobold,nounderscore,noitalics]"
